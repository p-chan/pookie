@import '_reset'
@import url(http://fonts.googleapis.com/css?family=Lobster);

body
  position relative
  padding 80px 0 0 
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background #faf9f4 
  color #5d5d5d 
  
.nav
  position absolute
  top 20px
  right 20px
  a
    display block
    border 2px solid #fff
    border-radius 50%
    img
      display block
      border-radius 50%

.header
  width 560px
  height 300px 
  margin 0 auto   
  background: -webkit-linear-gradient(90deg, #EC6F66 10%, #F3A183 90%); /* Chrome 10+, Saf5.1+ */
  background:    -moz-linear-gradient(90deg, #EC6F66 10%, #F3A183 90%); /* FF3.6+ */
  background:     -ms-linear-gradient(90deg, #EC6F66 10%, #F3A183 90%); /* IE10 */
  background:      -o-linear-gradient(90deg, #EC6F66 10%, #F3A183 90%); /* Opera 11.10+ */
  background:         linear-gradient(90deg, #EC6F66 10%, #F3A183 90%); /* W3C */

  color #fff
  text-align center
  
.header__sitename
  padding 75px 0 0 
  font-size 32px
  font-family: 'Lobster', cursive;
  
.header__description
  margin 5px 0 0
  
.header__login
  display inline-block
  margin 30px 0 0
  border 2px solid #fff
  color #fff
  font-size 14px
  a
    display block
    width 100%
    height 100%
    padding 5px 10px
    box-sizing border-box
    color #fff 
    text-decoration none
    &:hover
      background #fff
      color #F3A183
      
.header__logout
  display inline-block
  margin 30px 0 0
  border 2px solid #fff
  color #fff
  font-size 14px
  a
    display block
    width 100%
    height 100%
    padding 5px 10px
    box-sizing border-box
    color #fff 
    text-decoration none
    &:hover
      background #fff
      color #F3A183

.content
  display flex
  justify-content space-between
  width 560px
  margin 0 auto
  padding 45px 30px
  background-color #fff
  box-sizing border-box

.col
  width 160px
  h2
    color #333
    font-size 16px
  p
    margin 5px 0 0
  
.footer
  padding 30px 0
  text-align center

a
  color: #00B7FF